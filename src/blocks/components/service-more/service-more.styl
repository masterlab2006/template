.dm-service-more
    margin 0 em(30) em(80)
    background: #EAF3FB;
    border-radius: em(20)
    padding em(40) 0 1em

    @media screen and (min-width: 769px)
        max-width: em(1336)
        margin 0 auto em(80)
        padding em(40) 0 1em

    &__header
        font-weight: 500;
        font-size: em(48)
        line-height: (52/48em)
        text-align: center;
        color: #000000;
        margin-bottom (32/48em)

        @media screen and (min-width: 769px)
            font-size: em(40)
            line-height: (44/40em)
            margin-bottom (32/40em)

    &__subtitle
        font-weight: normal;
        font-size: em(24)
        line-height: (32/24em)
        text-align: center;
        color: #000000;
        margin-bottom (40/24em)
        padding 0 1em

    &__items
        display flex
        flex-wrap: wrap
        justify-content: space-between

        @media screen and (min-width: 769px)
            max-width: em(1144)
            margin 0 auto

    &__item
        width em(316)
        margin-bottom: em(24)

        @media screen and (min-width: 769px)
            width em(365)
            margin-bottom em(40)

    &__title
        font-weight normal
        font-size: em(20)
        text-align: center;
        color: #000000;

    &__img
        height em(96)
        background-position 50% 50%
        background-repeat no-repeat
        background-size contain
        margin-bottom 1em

        &--1
            background-image embedurl('../img/content/coral/service-1.svg')
        &--2
            background-image embedurl('../img/content/coral/service-2.svg')
        &--3
            background-image embedurl('../img/content/coral/service-3.svg')
        &--4
            background-image embedurl('../img/content/coral/service-4.svg')
        &--5
            background-image embedurl('../img/content/coral/service-5.svg')
        &--6
            background-image embedurl('../img/content/coral/service-6.svg')

    &__tip
        display inline-flex
        position relative
        font-size (16/20em)
        width em(18)
        height em(18)
        vertical-align: middle
        margin-left 0.3em

        &:hover
            .dm-service-more__tip__icon:before
                opacity 1

            .dm-service-more__tip__popup
                opacity 1

        &__icon
            width em(18)
            height em(18)
            cursor pointer
            background-position 50% 50%
            background-repeat no-repeat
            background-size contain
            background-image embedurl('../img/content/coral/tip.svg')
            position relative

            &:before
                content ''
                position absolute
                left 0
                top 0
                width em(18)
                height em(18)
                background-position 50% 50%
                background-repeat no-repeat
                background-size contain
                background-image embedurl('../img/content/coral/tip-hover.svg')
                opacity 0
                transition: all 0.4s

        &__popup
            position absolute
            border-radius: em(20)
            padding 1em em(24)
            background-color #fff
            box-shadow 0px 2px 24px rgba(0, 0, 0, 0.1)
            transform: translate3d(0,-50%,0)
            top 50%
            right 100%
            margin-right em(12)
            opacity 0
            pointer-events: none
            transition: all 0.4s

            &:before
                content ''
                position absolute
                right em(-8)
                top 50%
                transform: translateY(-50%)
                border-style: solid;
                border-width: 0.5em 0 0.5em 0.5em;
                border-color: transparent transparent transparent #ffffff;

        &__title
            font-weight normal
            text-align left
            color: #000000;
            margin-bottom 0.5em
        
        &__text
            font-weight normal
            color: #777;
            text-align left