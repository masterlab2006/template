.dm-villas-info
    padding 0 em(30)
    margin-bottom em(80)

    @media screen and (min-width: 769px)
        padding 0
        max-width: em(1336)
        margin 0 auto em(80)

    &__headers
        display flex
        margin-bottom 2em

        @media screen and (min-width: 769px)
            max-width: em(632)
            margin 0 auto 2em

    &__header
        flex 1 1 50%
        text-align center
        font-weight: 400;
        font-size: em(24)
        color: #000000;
        cursor pointer
        padding 0 0 (8/24em)
        border-bottom: 4px solid rgba(#000, 0.1)

        &.selected
            border-bottom-color: #0093D0
            font-weight bold

    &__body
        padding 2em em(20)

        @media screen and (min-width: 769px)
            padding 2em em(8)
    
    &__body-wrap
        background: #FFFFFF;
        box-shadow: 0px 0px 48px rgba(0, 0, 0, 0.1);
        border-radius: em(20)
        // padding 2em em(10)

        @media screen and (min-width: 769px)
            // padding 2em em(8)

    &__subtitle
        text-align center
        font-size: em(28)
        color: #0093D0;
        margin-bottom (32/28em)

        @media screen and (min-width: 769px)
            font-size 2em
            margin-bottom (40/32em)

    &__items
        columns 2

        &:after
            content ''
            width 100%
            display table
            clear both

        @media screen and (min-width: 769px)
            columns auto
            display flex
            flex-wrap: wrap

    &__col
        padding 0.2px 0

        @media screen and (min-width: 769px)
            padding 0

    &__item
        width (300/16em)
        margin 0 em(10) (24/16em)
        margin 0 0 (24/16em)
        display flex
        // align-items: flex-start

        @media screen and (min-width: 769px)
            width em(392)
            margin 0 em(24) (24/16em)

        &__img
            width em(20)
            min-width em(20)
            max-width em(20)
            height em(20)
            min-height em(20)
            max-height em(20)
            margin-right 1em
            background-position 50% 50%
            background-repeat no-repeat
            background-size contain

        &__title
            flex-grow: 1
            font-size em(20)
            line-height (24/20em)
            color #000
            font-weight normal

            @media screen and (min-width: 769px)
                font-size 1em
                line-height em(20)

                &__small
                    font-size (12/16em)

        &__value
            font-size em(20)
            color #000
            font-weight normal
            width (14/20em)
            text-align center

            @media screen and (min-width: 769px)
                font-size 1em

        &__check
            display block
            width em(14)
            min-width em(14)
            max-width em(14)
            height em(20)
            background-position 50% 50%
            background-repeat no-repeat
            background-size contain
            background-image embedurl('../img/content/coral/check.svg')

    &__btn-wrap
        text-align center
    
    &__btn
        min-width: (290/24em)
        margin-top (70/24em)

        @media screen and (min-width: 769px)
            font-size em(20)!important
            min-width: (252/20em)

