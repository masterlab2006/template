.section--video

	margin-bottom (50/16em)

	+md-block()
		margin-bottom (100/16em)

	+lg-block()
		margin-bottom (73/16em)

	.btnn-row
		position relative
		z-index 3

.video 
	position relative
	z-index 3
	width 100%
	overflow hidden
	height em(180)
	background-color transparent
	overflow hidden
	background-position center 0
	background-repeat no-repeat
	background-size 100% 100%
	margin-top 0
	margin-bottom 0
	cursor pointer

	&:hover
		
		.video__button:after
			-webkit-animation pulse 1s linear infinite
			animation pulse 1s linear infinite

	+md-block()
		height (432/16em)		
	
	+lg-block()
		width (1280/16em)
		height (720/16em)
		margin-left auto
		margin-right auto

	&-wrap
		position relative
		z-index 2
		overflow hidden
		margin 0 0 em(30)
		
		+md-block()
			margin 3em 0 (50/16em)
					
		+lg-block()			
			margin 6.5em 0 (50/16em)

	iframe
		height 100.1%
		width 100.5%
		left -0.2%!important
		top -0.1%!important
		position relative

		+lg-block()
			height 100.2%
			width 100.8%
			left -0.4%!important
			top -0.1%!important

	&__media
		position absolute
		top 50%
		left 0
		transform translateY(-50%)scale(1.01)
		width 100%
		height 100%
		border none
		background-size cover
		background-repeat no-repeat
		z-index 1
		background-image url(../img/content/video/video-poster.jpg)
	
	&__button
		background transparent
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		width (70/16em)
		height (70/16em)
		appearance none
		margin 0
		padding 0
		border 0
		outline none
		cursor pointer
		transition all 0.2s linear
		opacity 1
		z-index 2
		
		&:after
			content ""
			position absolute
			display block
			width 100%
			height 100%
			border-radius 50%
			border 1px solid #FFFFFF
			left 0
			top 0			
			-webkit-animation pulse 1s linear infinite
			animation pulse 1s linear infinite

			+lg-block()
				-webkit-animation none
				animation none
		
		+md-block()
			width (76/16em)
			height (76/16em)
		
		+lg-block()
			width (124/16em)
			height (124/16em)
		
		&:focus
			outline none
		
		&:hover
			.video__circle
				fill darken(#B36692, 20%)

			&:after
				-webkit-animation pulse 1s linear infinite
				animation pulse 1s linear infinite
	
	&__circle
		fill-opacity 0.7
		transition all 0.3s
		fill #B36692
	
	&.open
		.video__media
		.video__button
			display none

@-webkit-keyframes pulse
	from
		transform scale(0.75)
		opacity 0

	50% 
		transform scale(1)
		opacity 1

	100% 
		transform scale(1.3)
		opacity 0

@keyframes pulse
	from
		transform scale(0.75)
		opacity 0

	50% 
		transform scale(1)
		opacity 1

	100% 
		transform scale(1.3)
		opacity 0