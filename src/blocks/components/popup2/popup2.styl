html.mobile.dm-popover-opened
html.mobile.dm-popover-opened > body
    -webkit-overflow-scrolling touch !important
    overflow auto !important
    height 100% !important

.dm-popover
    &__container
        position fixed
        top 0
        left 0
        z-index 99999
        width 100%
        direction ltr

    &__dim
        display none
        position fixed
        top 0
        right 0
        bottom 0
        left 0
        background-color #000
        z-index 0
        opacity 0

    &__wrap
        display none
        position relative
        box-sizing border-box
        max-width 100%
        flex 0 0 auto
        margin auto

    &__close
        z-index 2
        position absolute
        top -15px
        right -15px
        width 30px
        height 30px
        cursor pointer
        background-image url('data:image/png;base64,')
        background-repeat no-repeat
        background-position 0 0

    &__body
        max-width 100%
        box-sizing border-box
        position relative
        display inline-block
        padding 20px 40px 35px
        vertical-align middle
        border 1px solid #b7b7b7
        background #fff

        &:before
        &:after
            content ""
            display table

        &:after
            clear both

    &__loader 
        display none
        background url("data:image/gif;base64,") no-repeat center #f2f7fd
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        margin 0
        z-index 1
        cursor pointer
        border-radius: 10px

    &__scrolling
        position fixed
        top 0
        right 0
        bottom 0
        left 0
        height 100%
        width 100%
        overflow auto
        z-index 1
        display -webkit-box
        display -moz-box
        display -ms-flexbox
        display -webkit-flex
        display flex
        align-items flex-start
        -ms-flex-align start
        padding 20px
        box-sizing border-box

        &.disable
            overflow hidden
            z-index -1

.dm-popup-villas
    max-width: em(882)
    // width: em(882)
    background-color #EAF3FB
    border-radius: em(20)
    box-shadow: 0px 324px 130px rgba(0, 0, 0, 0.01), 0px 182px 109px rgba(0, 0, 0, 0.05), 0px 81px 81px rgba(0, 0, 0, 0.08), 0px 20px 45px rgba(0, 0, 0, 0.09), 0px 0px 0px rgba(0, 0, 0, 0.1);

    &__wrap
        font-size (100vw/53)
        // font-size 6px
        @media screen and (min-width: 769px)
            font-size 11px

    &__top
        background-color #fff
        border-radius: em(20)
        padding em(88) em(48) em(44)
        box-shadow: 0px 0px 59px rgba(0, 0, 0, 0.25);

    &__title
        font-weight: 500;
        font-size: em(40)
        line-height: 110%
        text-align: center;
        color: #000000;
        margin-bottom (48/40em)

    &__img
        width em(96)
        height em(96)
        border-radius: 50%
        // background-color #fff
        box-shadow: 6px 6px 32px rgba(0, 0, 0, 0.1);
        margin 0 auto em(40)
        background-repeat no-repeat
        background-position 50% 50%
        background-size em(96) em(96)
        display block
        // outline: none
        // transition: all 0.4s

        // &:hover
        //     transform: scale(1.1)

        &--1
            background-image embedurl("../img/content/coral/popup-img-1.svg")
        &--2
            background-image embedurl("../img/content/coral/popup-img-2.svg")

    &__subtitle
        font-weight: 500
        font-size: 2em
        line-height: (36/32em)
        text-align: center;
        color: #000000;
        margin-bottom (24/32em)

    &__phone
        text-align: center;
        margin-bottom em(48)

        a
            font-weight: 500;
            font-size: em(56)!important
            line-height: (64/56em)!important
            color: #F0AB00;
            text-decoration none

            &:hover
                color: #F0AB00;

    &__note
        font-size: em(24)
        text-align: center;
        color: #000000;
        font-weight normal

        a
            color #0075FF
            font-size: 1em!important
            text-decoration underline

            &:hover
                text-decoration none
                color #0075FF

    &__bottom
        padding 2em

    &__title2
        font-weight: 500;
        font-size: 2em
        line-height: (36/32em)
        text-align: center;
        color: #000000;
        margin-bottom 1em

    &__inner
        display flex
        justify-content: center
        align-items: center
    
    &__left
        margin-right em(68)

    &__right
        display flex
        // flex-wrap: wrap
    
    &__title3
        font-weight: 500;
        font-size: em(24)
        line-height: (32/24em)
        color: #000000;
        margin-bottom (8/24em)

    &__title4
        font-size: em(24)
        line-height 100%
        color: rgba(#000000, 0.6);

    &__link
        display block
        width em(64)
        height em(64)
        background-repeat no-repeat
        background-position 50% 50%
        background-size cover
        filter: drop-shadow(0px 4px 10px rgba(0, 0, 0, 0.15));

        & + &
            margin-left 2em

        &--wa
            background-image embedurl("../img/content/coral/wa2-icon.svg")
        &--vk
            background-image embedurl("../img/content/coral/vk2-icon.svg")
        &--tg
            background-image embedurl("../img/content/coral/tg2-icon.svg")
        &--chat
            background-image embedurl("../img/content/coral/chat2-icon.svg")

.dm-popup-villas__popup
    .dm-popover__body
        border none
        padding 0
        background: transparent
    
    .dm-popover__close
        font-size 10px
        right em(24)
        top em(24)
        width em(24)
        height em(24)
        background embedurl("../img/content/coral/close.svg") 50% 50% no-repeat
        background-size contain

        @media screen and (min-width: 769px)
            font-size 16px

.dm-popup-villas__popup--form
    .dm-popover__body
        padding 30px 0 0 0
    iframe
        width: 400px!important

        @media screen and (min-width: 769px)
            width auto

    .dm-popover__close
        top em(58)