body
    .contentLayout-BaseContainer
        max-width: 100%;
        overflow: hidden;

    .subpage-search-bg > .background
        position: static;
        left: auto;
        top: auto;
        right: auto;
        bottom: auto;
        width: auto;
        height: auto;
        margin: 0;
        padding: 0;
        -webkit-transform: none;
        -moz-transform: none;
        -ms-transform: none;
        -o-transform: none;
        transform: none;
        background: none;
        position: relative;
    
    .subpage-search-bg > .background .video-box
        position: relative;
    
    .subpage-search-bg > .background .video-box:before
        content: '';
        display: block;
        font-size calc(100vw/45)
        padding-top: em(712);

        @media screen and (min-width: 769px)
            padding-top: 37%;

    .subpage-search-bg > .background .video-box > *
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;

    .subpage-search-bg > .background .video-box .backdrop
        background-image: url(../img/content/coral/intro-sm.jpg);
        background-size: cover;

        @media screen and (min-width: 769px)
            background-image: url(../img/content/coral/intro-lg.jpg);
        

    .subpage-search-bg > .background .video-box .vimeo-wrap
        opacity: 0;
        -webkit-transition: opacity 1s;
        -moz-transition: opacity 1s;
        -ms-transition: opacity 1s;
        -o-transition: opacity 1s;
        transition: opacity 1s;

    .subpage-search-bg > .background .video-box .vimeo-wrap.playback
        opacity: 1;

    .subpage-search-bg > .background .video-box .info-overlay
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 10%;

    .subpage-search-bg > .background .video-box .info-overlay
        align-items: flex-start;
        padding: 15% 0;

    .subpage-search-bg > .background .video-box .vimeo-wrap iframe
        font-size calc(100vw/45)
        position: absolute;
        left: 50%;
        top: 50%;
        width: em(720);
        height: em(712);
        transform: translate(-50%, -50%)

        @media screen and (min-width: 769px)
            font-size calc(100vw/120)
            width: em(1920);
            height: em(1074);

        // @media screen and (min-width: 769px)
        //     left 0
        //     width 100%
        //     height 100%
        //     transform: none

    .subpage-search-bg .searchtabsmain 
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;

:root
    --shadow-blur 10px
    --shadow-color #ad7c00

.dm-intro

    font-size calc( 100vw / 48 )

    @media screen and (min-width: 769px)
        font-size calc( 100vw / 120 )

    &__img-wrap
        background: radial-gradient(50% 50% at 50% 50%, rgba(128, 102, 77, 0.7) 0%, rgba(94, 78, 62, 0) 100%);
        mix-blend-mode: multiply;
        position absolute
        top 0
        bottom 0
        left 0
        right 0

    &__img
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        background url('../img/content/coral/intro-img-sm.png') 50% 50% no-repeat
        background-size em(528) auto

        @media screen and (min-width: 769px)
            background url('../img/content/coral/intro-img-sm.png') 50% 100% no-repeat
            background-size em(528) auto