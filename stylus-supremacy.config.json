{
  "insertColons": false,
  "insertSemicolons": false,
  "insertBraces": false,
  "insertParenthesisAroundIfCondition": false,
  "selectorSeparator": "\n",
  "sortProperties": "grouped",
  "alwaysUseImport": true,
  "alwaysUseNoneOverZero": true,
  "reduceMarginAndPaddingValues": true,
  "quoteChar": "\"",
  "preserveNewLinesBetweenPropertyValues": true,
  "ignoreFiles": ["src/styles/helpers/*.styl", "src/styles/layout/*.styl", "src/styles/vendor/**/*.styl"]
}